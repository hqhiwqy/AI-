/**index.wxss**/

.header .title {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 700;
}

.header .share {
  --button-plain-background-color: transparent;
  --button-default-border-color: transparent;
  --button-normal-font-size: 24rpx;
  --button-default-color: #FF7800;
}

.header .btn{
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
}

.header .btn .reset {
  margin-left: 40rpx;
}

.result {
  padding: 20rpx;
  font-size: 28rpx;
}

.result .total {
  margin: 20rpx 0;
}

.result .total text{
  color: #FF7800;
}

.result .caption{
  background-color: rgba(181, 210, 238, .4);
  color: #234D75;
  padding: 10rpx 0;
}

.result .scrollView {
  height: 500rpx;
}

.result .data{
  padding: 10rpx 0;
}

.result .data:nth-of-type(2n){
  background-color: #f5f5f5;
}

.result .icon{
  color: #234D75;
}

.result .icon van-icon{
  vertical-align: middle;
}

.result .noData {
  text-align: center;
  color: #666;
  padding: 40rpx 0;
}